<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".main.CarDetails">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    app:navigationIcon="@drawable/ic_back"
                    android:layout_height="match_parent"
                    app:logoDescription="my logo"
                    app:titleTextColor="@color/white"
                    app:title="Taxi"
                    app:titleMarginStart="50dp" />
            </com.google.android.material.appbar.AppBarLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_main"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        style="@style/text_style"
                        android:id="@+id/taxi_company_name"
                        android:text="Company Name"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        style="@style/text_style"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/taxi_number"
                        android:layout_marginTop="20dp"
                        android:text="Taxi Number"
                        android:layout_marginRight="50dp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/car_driver"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="200dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                style="@style/text_style"
                android:text="Driver Details"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/taxi_driver_img"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/black"
                        android:layout_margin="10dp"
                        android:src="@drawable/maleprofile"/>
                    <TextView
                        android:layout_width="match_parent"
                        style="@style/text_style"
                        android:id="@+id/taxi_driver_name"
                        android:text="Driver Name"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
                      <TextView
                          android:layout_width="match_parent"
                          style="@style/text_style"
                          android:id="@+id/taxi_driver_no"
                          android:text="Phone No :"
                          android:textSize="20sp"
                          android:layout_margin="10dp"
                          android:layout_height="wrap_content"/>
                      <TextView
                          android:layout_width="match_parent"
                          style="@style/text_style"
                          android:id="@+id/taxi_driver_email"
                          android:text="Email No :"
                          android:textSize="20sp"
                          android:layout_margin="10dp"
                          android:layout_height="wrap_content"/>
                      <TextView
                          android:layout_width="match_parent"
                          style="@style/text_style"
                          android:id="@+id/taxi_driver_residence"
                          android:text="Residence :"
                          android:textSize="20sp"
                          android:layout_margin="10dp"
                          android:layout_height="wrap_content"/>
                  </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                style="@style/text_style"
                android:id="@+id/taxi_current_location"
                android:text="Current Location"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        app:cardElevation="5dp"
                        android:elevation="5dp"
                        app:cardCornerRadius="5dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                         <androidx.appcompat.widget.AppCompatButton
                             android:layout_width="0dp"
                             android:layout_weight="1"
                             android:layout_margin="10dp"
                             android:text="Call"
                             android:id="@+id/btn_call_driver"
                             android:background="@drawable/shape"
                             android:layout_height="wrap_content"/>
                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:text="Send Sms"
                                android:id="@+id/btn_send_sms"
                                android:background="@drawable/shape"
                                android:layout_height="wrap_content"/>
                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:text="Book"
                                android:id="@+id/btn_book"
                                android:background="@drawable/shape"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>


</LinearLayout>